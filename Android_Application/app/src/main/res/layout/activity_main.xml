<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.efriem.myapplication.MainActivity">

    <Button
        android:text="Turn Off lamp 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bLamp11"
        android:onClick="turnOffLamp1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="0"
        android:layout_column="1" />

    <Button
        android:text="TURN OFF Lamp 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bLamp22"
        android:onClick="turnOffLamp2"
        android:layout_row="1"
        android:layout_column="1" />

    <Button
        android:text="Turn On Lamp 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bLamp2"
        android:onClick="turnOnLamp2"
        android:layout_row="1"
        android:layout_column="0" />

    <Button
        android:text="Turn On Lamp 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bLamp3"
        android:onClick="turnOnLamp3"
        android:layout_row="2"
        android:layout_column="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bLamp33"
        android:onClick="turnOffLamp3"
        android:layout_row="2"
        android:layout_column="1"
        android:text="TURN OFF LAMP 3" />

    <Button
        android:text="Turn On Lamp 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bLamp1"
        android:onClick="turnOnLamp1"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="0"
        android:layout_column="0" />

    <Button
        android:text="TURN ON LAMP 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bLamp4"
        android:onClick="turnOnLamp4"
        android:layout_row="3"
        android:layout_column="0" />

    <Button
    android:text="TURN Off LAMP 4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bLamp44"
        android:onClick="turnOffLamp4"
    android:layout_row="3"
    android:layout_column="1" />

    <Button
        android:text="TURN On All"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:id="@+id/bLampA"
        android:onClick="turnOnAll"
        android:layout_row="4"
        android:layout_column="0" />

    <Button
        android:text="TURN Off All"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:id="@+id/bLampAl"
        android:onClick="turnOffAll"
        android:layout_row="4"
        android:layout_column="1" />

    <Button
        android:text="M Forward"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:id="@+id/bMotorForward"
        android:onClick="mForward"
        android:layout_row="5"
        android:layout_column="0" />

    <Button
        android:text="M Reverse"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:id="@+id/bMotorReverse"
        android:onClick="mReverse"
        android:layout_row="5"
        android:layout_column="1" />
</GridLayout>
